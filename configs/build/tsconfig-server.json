{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx":"react",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "sourceRoot": "./src",
        "mapRoot":"./dist/server",        
        "baseUrl": "./src",        
        "outDir": "./dist/server",        
        "traceResolution": true,
        "strictNullChecks": true,
        "typeRoots" : ["../../node_modules/@types"]                  
    },
    "exclude":[
        "../../node_modules"   
    ],
    "include":[
        "../../src/server/**/*.ts"
    ]
}