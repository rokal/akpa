{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx":"react",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "sourceRoot": "./src",
        "mapRoot":"./dist",
        "baseUrl": "./src",        
        "outDir": "./dist/",        
        "traceResolution": true,
        "strictNullChecks": true        
    },
    "exclude":[
        "../../node_modules"
    ],
    "include":[
    	"../../src/**/*.ts",
        "../../src/**/*.tsx",
    	"../../typings/*.d.ts"
    ]
}