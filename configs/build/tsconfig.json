{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx":"react",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "sourceRoot": "./src",
        "mapRoot":"./dist",
        "baseUrl": "./src",        
        "outDir": "./dist/",        
        "traceResolution": true,
        "strictNullChecks": true,
        "typeRoots" : ["./typings"]       
    },
    "exclude":[
        "../../node_modules"
    ],
    "include":[
    	"../../src/model/*.ts",
        "../../src/model/io/*.ts",
        "../../src/view/*.ts",
        "../../src/*.ts",
        "../../src/*.tsx"
    ]
}