{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx":"react",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "sourceRoot": "./src",
        "mapRoot":"./dist/static",
        "baseUrl": "./src",        
        "outDir": "./dist/static",        
        "traceResolution": true,
        "strictNullChecks": true,
        "typeRoots" : ["./typings"]
    },
    "exclude":[
        "../../node_modules"
    ],
    "include":[
    	"../../src/client/*.ts",
        "../../src/model/*.ts",
        "../../src/model/io/*.ts",
        "../../src/shared/**.ts",
        "../../src/view/*.ts",        
        "../../src/*.ts",
        "../../src/*.tsx"
    ]
}