{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "./tests/JsOutput",
        "sourceRoot": "./src",
        "baseUrl": "./src",        
        "jsx":"preserve",
        "pretty":true,
        "traceResolution": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "strictNullChecks": true,
        "typeRoots" : ["../../node_modules/@types"]
    },
    "exclude":[
        "../../node_modules"
    ],
    "include":[
        "../../src/client/*.ts",        
    	"../../src/model/**/*.ts",
        "../../src/server/*.ts",
        "../../src/view/*.ts",
        "../../src/*.ts",
        "../../src/*.tsx",
        "../../tests/*.ts",        
        "../../tests/*.tsx"
    ]
}