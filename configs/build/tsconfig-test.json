{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "./tests/JsOutput",
        "sourceRoot": "./src",
        "baseUrl": "./src",
        "strictNullChecks": true,
        "jsx":"preserve",
        "pretty":true,
        "traceResolution": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": false
    },
    "exclude":[
        "../../node_modules"
    ],
    "include":[
      	"../../src/**/*.ts",
        "../../src/**/*.tsx",
        "../../tests/**/*.ts",
        "../../tests/**/*.tsx",
    	"../../typings/*.d.ts"      
    ]
}